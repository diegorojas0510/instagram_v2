<!--se trabajara con el objeto pot-->
<div class="w-full md:w-1/2 lg:w-1/3 p-3">
  <div class="p-6 border rounded-xl">
    <div class="relative h-52 mb-6">
            <span class="absolute top-0 right-0 mt-4 mr-4 text-xs text-white px-2 py-1 font-semibold bg-gray-600 bg-opacity-100 rounded-md uppercase">
                <%#= pot.category_default%>
              Desarollo de software
            </span>
      <%# if pot.image.present?%>
        <%#= image_tag pot.image, class:"w-full h-full object-cover rounded-lg"%>
      <%# end %>
    </div>
    <!--usamos el helper de date-->
    <span class="inline-block mb-4 text-xs text-gray-500"><%= date_format pot.created_at %></span>
    <h2 class="mb-4 text-2xl font-semibold font-heading"><%= pot.name %></h2>
    <!--usamos el helper de description-->
    <p class="mb-4 text-gray-500 leading-relaxed"><%=simple_description pot.description %></p>
    <%=link_to 'Ver Imagen', pot, class:"cursor-pointer inline-block  py-4 px-8 leading-none text-white bg-red-600 hover:bg-red-700 font-semibold rounded shadow"%>
  </div>
</div>