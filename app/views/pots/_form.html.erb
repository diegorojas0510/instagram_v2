<%= form_with model: @pot do |form| %>

    <% if @pot.errors.any? %>
    <div class="mb-4">
      <% @pot.errors.each do |error| %>
        <%= image_tag 'face-dizzy.svg', size: '20x20'%>
        <%= error.full_message %>
      <% end %>
    </div>
    <% end %>

  <div class="mb-4">
    <%= form.text_field :name, placeholder: "Nombre del pots", class: "appearance-none block w-full py-3 px-4  text-gray-700 bg-gry-50 focus:bg-white border border-gray-200 focus:border-gray-500 rounded focus:outline-none" %>
  </div>

  <div class="mb-4">
    <%= form.text_area :description, placeholder: "DescripciÃ³n del pots", class: "appearance-none block w-full py-3 px-4  text-gray-700 bg-gry-50 focus:bg-white border border-gray-200 focus:border-gray-500 rounded focus:outline-none" %>
  </div>

  <div class="mb-4">
    <%= form.label "Visible" %>
    <%= form.check_box :visible %>
  </div>

  <!--Para cargar la imagen-->
  <div class="mb-4">
    <%= form.file_field :image %>
  </div>

  <!--Esto crea los check box para las categorias y las implementa en la vista al momento de cargar el nuevo pots-->
<div>
  <%= form.collection_check_boxes :category_ids, Category.all, :id, :name do |category| %>
  <%= category.label class: "form-check-label text-lg inline-block text-gray-600" do %>
    <%= category.check_box + category.text %>
    <% end %>
  <% end %>
</div>


  <div class="mb-4">
    <%= form.submit "Guardar Cambios", class: "cursor-pointer inline-block  py-4 px-8 leading-none text-white bg-purple-600 hover:bg-purple-700 font-semibold rounded shadow" %>
  </div>

<% end %>